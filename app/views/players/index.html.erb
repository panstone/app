<p id="notice"><%= notice %></p>

<h1>Players</h1>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= link_to 'Просмотр', player %></td>
        <td><%= link_to 'Редактировать', edit_player_path(player) %></td>
        <td><%= link_to 'Удалить', player, method: :delete, data: { confirm: 'Вы уверенны?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый юзер', new_player_path %>
